<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.domaindns.auth.mapper.UserProfileMapper">

    <resultMap id="UserProfileResult" type="com.domaindns.auth.entity.UserProfile">
        <id property="userId" column="user_id" />
        <result property="realName" column="real_name" />
        <result property="idCard" column="id_card" />
        <result property="isVerified" column="is_verified" />
        <result property="verifiedAt" column="verified_at" />
        <result property="createdAt" column="created_at" />
        <result property="updatedAt" column="updated_at" />
    </resultMap>

    <select id="findByUserId" resultMap="UserProfileResult">
        SELECT * FROM user_profiles WHERE user_id = #{userId}
    </select>

    <insert id="insert" parameterType="com.domaindns.auth.entity.UserProfile">
        INSERT INTO user_profiles (user_id, real_name, id_card, is_verified, verified_at, created_at, updated_at)
        VALUES (#{userId}, #{realName}, #{idCard}, #{isVerified}, #{verifiedAt}, NOW(), NOW())
    </insert>

    <update id="update" parameterType="com.domaindns.auth.entity.UserProfile">
        UPDATE user_profiles
        SET real_name = #{realName},
            id_card = #{idCard},
            is_verified = #{isVerified},
            verified_at = #{verifiedAt},
            updated_at = NOW()
        WHERE user_id = #{userId}
    </update>

</mapper>
